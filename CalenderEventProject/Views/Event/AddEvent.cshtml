@model CalenderEventProject.Entities.Event

@{
    Layout = "~/Views/Shared/_CalLayout.cshtml";
    ViewData["BreadcrumbActive"] = "Yeni Etkinlik Ekle";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
               
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Etkinlik Bilgileri</h3>
                    </div>
                    @using (Html.BeginForm("AddEvent", "Event", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, "Etkinlik Başlığı")
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Etkinlik Başlığını Giriniz" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, "Kategori")
                        @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, "Kategori Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, "Başlangıç Tarihi") 
                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate, "Bitiş Tarihi") 
                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } }) 
                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group clearfix">
                        <div class="icheck-primary d-inline">
                            @Html.CheckBoxFor(model => model.AllDay, new { id = "allDayCheckbox" })
                            <label for="allDayCheckbox">Tüm Gün Etkinlik mi?</label>
                        </div>
                        @Html.ValidationMessageFor(model => model.AllDay, "", new { @class = "text-danger" })
                    </div>
                </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            @Html.ActionLink("İptal / Listeye Dön", "EventList", "Event", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")   
    <script>
  </script>
}